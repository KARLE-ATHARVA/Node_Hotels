{
  "configurations": [
    {
      "name": "windows-gcc-x64",
      "includePath": [
        "${workspaceFolder}/**"
      ],
      "compilerPath": "gcc",
      "cStandard": "${default}",
      "cppStandard": "${default}",
      "intelliSenseMode": "windows-gcc-x64",
      "compilerArgs": [
        "-Wall", // Enable all warnings
        "-Wextra", // Enable extra warnings
        "-pedantic-errors" // Treat warnings as errors
      ]
    }
  ],
  "version": 4
}
